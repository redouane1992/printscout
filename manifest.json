{
  "manifest_version": 3,
  "name": "PrintScout",
  "version": "1.0.0",
  "description": "Pro analytics for Print-On-Demand marketplaces.",
  "permissions": ["tabs", "scripting", "downloads", "storage"],
  "host_permissions": ["https://www.teepublic.com/*"],
  "action": {
    "default_title": "PrintScout",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "sw.js"
  }
}
